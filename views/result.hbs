<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                <p class="lead font-weight-bold">Search result for "{{ keyword }}"</p>
            </div>
        </div>
        {{#if hasContent}}
        <div class="row mt-3">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>App ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Rating</th>
                                <th>Installs</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each recs}}
                            <tr>
                                <td>{{ this.app_id }}</td>
                                <td>{{ this.name }}</td>
                                <td>{{ this.category }}</td>
                                <td>{{ this.rating }}</td>
                                <td>{{ this.installs }}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col d-flex justify-content-between">
                <a href="/search/previous" class="btn btn-primary">Previous</a>
                <p>Page {{ page }}</p>
                <a href="/search/next" class="btn btn-primary">&nbsp;&nbsp;&nbsp;Next&nbsp;&nbsp;&nbsp;</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="lead text-center text-danger font-weight-bold">{{ ending }}</p>
            </div>
        </div>
        {{else}}
            <p class="lead">No search result.</p>
        {{/if}}
    </div>
</main>