<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                <p class="lead font-weight-bold">Search result for "{{ keyword }}"</p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                {{#if hasContent}}
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>App ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Rating</th>
                                <th>Installs</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each recs}}
                            <tr>
                                <td>{{ this.app_id }}</td>
                                <td>{{ this.name }}</td>
                                <td>{{ this.category }}</td>
                                <td>{{ this.rating }}</td>
                                <td>{{ this.installs }}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                    <p class="lead">No search result.</p>
                {{/if}}
            </div>
        </div>
    </div>
</main>